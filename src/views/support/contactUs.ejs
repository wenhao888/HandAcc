<%-contentFor("content")%>

<script src="/javascripts/support/contactUs-page.js"></script>


<div class="container" style="width:500px;">
    <h3 class="page-title">
        Contact Us
    </h3>

    <form class="form-horizontal login-form" name="contactForm" ng-app="contactUs"
          ng-controller="contactUsController" action="/support/contactUs"  method="post" novalidate>

        <div class="form-group">
            <label class="control-label col-sm-4">Your name <span class="text-danger">*</span></label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="user" ng-model="user" required="true"/>
                <p class="input-error" ng-show="contactForm.user.$error.required && submitted" ng-bind="'required'">
                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4">Contact</label>
            <div class="col-sm-8">
                <input type="text" class="form-control contact-validator" name="contact" ng-model="contact" placeholder="email/phone" required >
                <p class="input-error" ng-show="contactForm.contact.$error.contact && submitted" ng-bind="'invalid email/phone'">
                </p>
                <p class="input-error" ng-show="contactForm.contact.$error.required && submitted" ng-bind="'required'">
                </p>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-4"> Your message <span class="text-danger">*</span></label>
            <div class="col-sm-12" >
                <textarea  class="form-control" name="message" spellcheck="true" style="height:200px; resize: vertical" ng-model="message" required> </textarea>

                <p class="input-error" ng-show="contactForm.message.$error.required && submitted" ng-bind="'required'">
                </p>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <a class="btn btn-sm btn-warning" href="javascript:window.history.back()"> Cancel </a>
                <button type="submit" class="btn btn-sm btn-primary" ng-click="submit(contactForm.$valid, $event)"> Submit </button>
            </div>
        </div>


    </form>
</div>


