<%-contentFor("content")%>

<script src="/javascripts/user/contactUs-page.js"></script>


<div class="container" style="width:500px;">
    <h3 class="page-title">
        Contact Us
    </h3>

    <form class="form-horizontal login-form" name="contactForm" ng-app="contactUs"
          ng-controller="contactUsController" action="/users/contactUs"  method="post" novalidate>

        <div class="form-group">
            <label class="control-label col-sm-4">Your name <span class="text-danger">*</span> : </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="user" ng-model="user" required="true"/>
                <p class="input-error" ng-show="contactForm.user.$error.required && submitted" ng-bind="'required'">
                    required
                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4"> Email: </label>
            <div class="col-sm-8">
                <input type="email" class="form-control" name="email" ng-model="email">
                <p class="input-error" ng-show="contactForm.email.$error.email && submitted" ng-bind="'invalid email'">
                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4"> Phone: </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="phone" ng-pattern="/^(([0-9]+)|\([0-9]+\))(-[0-9]+)*$/" ng-model="phone">
                <p  class="input-error" ng-show="contactForm.phone.$error.pattern && submitted" ng-bind="'invalid phone'">
                </p>

                <input type="text"  style="display: none" class="form-control" name="contact" ng-model="contact"  required>

                <p class="input-error"  ng-show="contactForm.email.$valid && contactForm.phone.$valid && contactForm.contact.$error.required && submitted" ng-bind="'email/phone required'">

                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4"> Your message <span class="text-danger">*</span> : </label>
            <div class="col-sm-12" >
                <textarea  class="form-control" name="message" style="height:200px; resize: vertical" ng-model="message" required> </textarea>

                <p class="input-error" ng-show="contactForm.message.$error.required && submitted" ng-bind="'required'">
                </p>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <button class="btn btn-sm btn-warning" ng-click="cancel()"> Cancel </button>
                <button type="submit" class="btn btn-sm btn-primary" ng-click="submit(contactForm.$valid, $event)"> Submit </button>
            </div>
        </div>

    </form>
</div>


